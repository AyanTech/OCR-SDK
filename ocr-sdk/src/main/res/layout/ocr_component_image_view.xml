<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/circularImageViewParent"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:background="@drawable/ocr_image_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/circularImg"
        app:shapeAppearanceOverlay="@style/ocr_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
          android:background="@drawable/ocr_ic_camera"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />
    <ImageView
        android:id="@+id/icCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ocr_ic_check"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"/>

</RelativeLayout>
